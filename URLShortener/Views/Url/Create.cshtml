@model UrlInfo

<form asp-action="create" asp-controller="url">
    <div class="form-group mb-2">
        <label asp-for="LongUrl" class="form-label">URL:</label>
        <input asp-for="LongUrl" class="form-control" placeholder="http://example.com">
        <span asp-validation-for="LongUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Создать">
        <a href="/" class="btn btn-primary" role="button">Отмена</a>
    </div>    
</form>